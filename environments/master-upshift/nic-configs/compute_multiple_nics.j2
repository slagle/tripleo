---
network_config:
- type: interface
  name: nic2
  mtu: {{ ctlplane_mtu }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  domain: {{ dns_search_domains }}
  routes: {{ ctlplane_host_routes }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/{{ ctlplane_subnet_cidr }}
- type: ovs_bridge
  name: {{ neutron_physical_bridge_name }}
  mtu: {{ external_mtu }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ external_ip }}/{{ external_subnet_cidr }}
  routes: {{ external_host_routes }}
  members:
  - type: interface
    name: nic3
    mtu: {{ external_mtu }}
    use_dhcp: false
    primary: true
- type: interface
  name: nic4
  mtu: {{ internal_api_mtu }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ internal_api_ip }}/{{ internal_api_subnet_cidr }}
  routes: {{ internal_api_host_routes }}
- type: interface
  name: nic5
  mtu: {{ storage_mtu }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ storage_ip }}/{{ storage_subnet_cidr }}
  routes: {{ storage_host_routes }}
- type: ovs_bridge
  name: br-tenant
  mtu: {{ external_mtu }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ tenant_ip }}/{{ tenant_subnet_cidr }}
  routes: {{ tenant_host_routes }}
  members:
  - type: interface
    name: nic7
    mtu: {{ tenant_mtu }}
    use_dhcp: false
    primary: true
